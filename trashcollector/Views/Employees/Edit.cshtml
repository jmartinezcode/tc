@model trashcollector.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col">
            <h1>Welcome, @Html.DisplayFor(model => model.Employee.FirstName)</h1>

            <h4>Here are today's pickups for the @Html.DisplayFor(model => model.Employee.ZipCode) area</h4>
        </div>
        <div class="col">
            <select asp-action="Edit" class="col form form-control" asp-items="new SelectList(new List<DayOfWeek> { DayOfWeek.Monday, DayOfWeek.Tuesday, DayOfWeek.Wednesday, DayOfWeek.Thursday, DayOfWeek.Friday })"></select>
            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-outline-primary btn-sm" style="margin-top: 20px" />
            </div>
        </div>
    </div>

